<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_face_select_tab_content_height"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:padding="@dimen/edit_face_select_item_stroke_width"
            android:scaleType="fitXY"
            android:src="@drawable/user_profile_image_1"
            tools:background="@drawable/edit_face_select_selected_bg" />

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:padding="@dimen/edit_face_select_item_stroke_width"
            android:scaleType="fitXY"
            android:src="@drawable/user_profile_image_1"
            tools:background="@drawable/edit_face_select_selected_bg" />

    </LinearLayout>
</FrameLayout>