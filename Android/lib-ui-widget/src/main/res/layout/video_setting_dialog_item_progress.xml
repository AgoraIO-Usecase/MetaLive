<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/video_setting_dialog_margin"
    android:background="@drawable/video_setting_dialog_item_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/video_setting_dialog_margin"
        android:gravity="center"
        android:text="@string/video_setting_dialog_title_bitrate"
        android:textAlignment="gravity" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/video_setting_dialog_margin"
        android:layout_marginTop="@dimen/video_setting_dialog_margin"
        android:layout_toEndOf="@id/tv_title"
        android:gravity="center"
        android:textAlignment="gravity" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_setting_dialog_progress_height"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/video_setting_dialog_margin"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progressDrawable="@drawable/video_setting_progress"
        android:thumb="@drawable/video_setting_seekbar_thumb" />
</RelativeLayout>

