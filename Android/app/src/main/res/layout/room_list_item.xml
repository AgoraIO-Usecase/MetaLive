<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_list_item_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/room_list_item_bg">

    <LinearLayout
        android:id="@+id/room_list_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="28dp"
        android:paddingVertical="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/room_list_item_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="12345544445555" />

        <LinearLayout
            android:id="@+id/room_list_participants_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/contentPaddingTop"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile_01"
                android:layout_width="36dp"
                android:layout_height="36dp"
                tools:src="@drawable/user_profile_image_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile_02"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="-5dp"
                tools:src="@drawable/user_profile_image_2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile_03"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="-5dp"
                tools:src="@drawable/user_profile_image_3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_profile_04"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="-5dp"
                tools:src="@drawable/user_profile_image_4" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/room_list_item_participant_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/room_list_ic_participant"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="100" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
