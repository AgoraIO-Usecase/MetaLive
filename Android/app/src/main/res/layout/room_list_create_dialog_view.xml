<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/et_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingStart="32dp"
        android:paddingEnd="52dp"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="12342314444444444444444444444444444444444"
        android:singleLine="true"
        android:ellipsize="end"
        android:hint="@string/room_list_create_dialog_hint"
        android:background="@drawable/room_list_create_dialog_et_bg"/>

    <ImageView
        android:id="@+id/iv_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:src="@drawable/room_list_create_dialog_random_icon"
        android:layout_gravity="end|center_vertical"/>

</FrameLayout>